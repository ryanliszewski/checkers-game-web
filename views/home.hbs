
<div class="container">
    <div class="row">
        <h4>Login</h4>
            <div class="login">
                <form action="/lobby" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="Username"></input>

                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="Password"></input>

                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>

                    </div>

                </form>

                <form action="/register" method="GET">
                    <div class="form-group">
                        <p><span> New User ? </span></p>
                        <button class="btn btn-lg btn-default btn-outline-secondary btn-block">Create an Account</button>

                     </div>

                </form>
                    
            </div>
    
    </div>
    
</div>

